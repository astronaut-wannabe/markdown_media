<figure class="video-container <%= klass %>" id="<%= id %>">
  <video controls>
    <source src="<%= embed_id %>" />
  </video>

  <% unless caption.to_s.empty? %>
    <figcaption class="caption video-caption">
      <%= MarkdownMedia.render_markdown caption %>
    </figcaption>
  <% end %>
</figure>
